<section class="user-section">

  <br>
  <h3 class="text-danger">Friends:</h3>
  <ul>
    <% if current_user.friends.none?%>
    <p>You have no friends </p>
    <% else %>
    <% current_user.friends.each do |friend| %>
    <li><%= friend.name %></li>
    <% end %>
    <% end %>
  </ul>
  <h3 class="text-danger">Pending Friends:</h3>
  <% if current_user.pending_friendships.none? %>
  <p>You have no pending friendships </p>
  <% else %>
  <% current_user.pending_friendships.each do |pf| %>
  <br>
  <h4 class="text-capitalize"><%= pf.user.name %></h4>
  <br>
  <%= link_to 'Accept', user_friendship_path(@user, pf.id), class:"btn btn-outline-primary", method: :patch %>
  <%= link_to 'Deny', user_friendships_path(@user) , class:"btn btn-outline-secondary" %>

  <% end %>
  <% end %>





  <br>
  <br>
  <article class="timeline">
    <h3 class="text-primary">Your Posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>