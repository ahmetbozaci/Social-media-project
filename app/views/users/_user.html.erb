<li>
  <p class="">
    <%= link_to "#{user.name}",  profile_path(user) %>
  </p>
  <% if !current_user.friend?(user) %>
  <% if current_user.pending_friends.include?(user) %>
  <p class="btn btn-info disabled"> Pending </p>
  <% else %>
  <p class="px-2">
    <%= link_to 'Invite to Friend', user_friendships_path(user, current_user), class:"btn btn-secondary", method: :post %>
  </p>
  <% end %>
  <% elsif current_user.friend_requests.include?(user) %>
  <%= link_to 'Accept', user_friendship_path(user, current_user), class:"btn btn-outline-primary", method: :patch %>
  <%= link_to 'Deny', user_friendships_path(user) , class:"btn btn-outline-secondary" %>
  <% else %>
  <p class="btn btn-info disabled"> Friend </p>
  <% end %>





</li>
<br>